{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "./**/*.ts",
    "./*.ts",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "packages",
    "wwwroot",
    "dist"
  ]
}